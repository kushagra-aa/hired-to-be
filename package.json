{
  "author": "kushagra-aa <kushagraagnihotri24@gmail.com>",
  "dependencies": {
    "drizzle-orm": "^0.44.5"
  },
  "description": "",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250906.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "cross-env": "^10.0.0",
    "del-cli": "^6.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.42.0",
    "wrangler": "^4.34.0"
  },
  "keywords": [],
  "license": "ISC",
  "main": "app/server/src/index.ts",
  "name": "hiredtobe",
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "pnpm lint && turbo run build",
    "build:quick": "turbo run build",
    "clean": "del-cli dist/ app/**/dist",
    "db:generate": "cross-env NODE_OPTIONS=\"--require tsconfig-paths/register\" drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply job-tracker-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply job-tracker-db",
    "deploy:wrangler": "pnpm clean && pnpm build && wrangler deploy --env production",
    "dev": "turbo run dev --parallel",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "wrangler dev --env dev",
    "format": "prettier --write .",
    "lint": "pnpm lint:js && pnpm lint:css",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "lint:fix": "pnpm lint:js:fix && pnpm lint:css:fix",
    "lint:js": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:js:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "preview": "pnpm build && wrangler dev --env production"
  },
  "version": "1.0.0"
}