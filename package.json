{
  "author": "kushagra-aa <kushagraagnihotri24@gmail.com>",
  "dependencies": {
    "@hiredtobe/eslint-config": "workspace:^"
  },
  "description": "",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250906.0",
    "@eslint/js": "^9.35.0",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "cross-env": "^10.0.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.34.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.43.0",
    "wrangler": "^4.34.0"
  },
  "keywords": [],
  "license": "ISC",
  "main": "apps/server/src/index.ts",
  "name": "hiredtobe",
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "pnpm lint && turbo run build",
    "build:quick": "turbo run build",
    "clean": "del-cli dist/ apps/**/dist",
    "deploy:wrangler": "pnpm clean && pnpm build && wrangler deploy --env production",
    "dev": "turbo run dev --parallel",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "wrangler dev --env dev",
    "format": "prettier --write .",
    "lint": "pnpm lint:js && pnpm lint:css",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:css:fix": "pnpm lint:css --fix",
    "lint:fix": "pnpm lint:js:fix && pnpm lint:css:fix",
    "lint:js": "pnpm lint:js:client&& pnpm lint:js:server&& pnpm lint:js:shared",
    "lint:js:client": "eslint -c apps/client/eslint.config.ts apps/client/src",
    "lint:js:client:fix": "pnpm lint:js:client --fix",
    "lint:js:fix": "pnpm lint:js:client:fix&& pnpm lint:js:server:fix&& pnpm lint:js:shared:fix",
    "lint:js:server": "eslint -c apps/server/eslint.config.ts apps/server/src",
    "lint:js:server:fix": "pnpm lint:js:server --fix",
    "lint:js:shared": "eslint -c packages/shared/eslint.config.ts packages/shared/src",
    "lint:js:shared:fix": "pnpm lint:js:shared --fix",
    "preview": "pnpm build && wrangler dev --env production"
  },
  "type": "module",
  "version": "1.0.0"
}